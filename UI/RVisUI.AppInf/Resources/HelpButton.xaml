<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:wpf="clr-namespace:RVisUI.Wpf;assembly=RVisUI.Wpf">

  <md:PackIcon x:Key="HelpCircleOutlinePackIcon"
               x:Shared="False"
               Kind="Help"
               Height="15"
               Width="15" />

  <Style x:Key="HelpButtonStyle" TargetType="Button" BasedOn="{StaticResource MaterialDesignFloatingActionMiniButton}">
    <Setter Property="Content" Value="{StaticResource HelpCircleOutlinePackIcon}"/>
    <Setter Property="Width" Value="20"/>
    <Setter Property="Height" Value="20"/>
    <Setter Property="wpf:Behaviour.ShowDoc" Value="True"/>
  </Style>

</ResourceDictionary>
  
<UserControl x:Class="Sensitivity.MorrisEffectsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:oxy="http://oxyplot.org/wpf"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:wpf="clr-namespace:RVisUI.Wpf;assembly=RVisUI.Wpf"
             xmlns:design="clr-namespace:Sensitivity.Design"
             xmlns:swc="clr-namespace:System.Windows.Controls;assembly=PresentationFramework"
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="1366"
             d:DataContext="{d:DesignInstance Type=design:MorrisEffectsViewModel, IsDesignTimeCreatable=True}"
             >

  <UserControl.Resources>
    <ResourceDictionary>

      <ResourceDictionary.MergedDictionaries>
        <wpf:DesignModeResourceDictionary DesignModeSource="pack://application:,,,/MahApps.Metro;component/Styles/Controls.xaml" />
        <wpf:DesignModeResourceDictionary DesignModeSource="pack://application:,,,/MahApps.Metro;component/Styles/Fonts.xaml" />
        <wpf:DesignModeResourceDictionary DesignModeSource="pack://application:,,,/MahApps.Metro;component/Styles/Themes/Light.Blue.xaml" />
        <wpf:DesignModeResourceDictionary DesignModeSource="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Light.xaml"/>
        <wpf:DesignModeResourceDictionary DesignModeSource="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Light.xaml" />
        <wpf:DesignModeResourceDictionary DesignModeSource="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Defaults.xaml" />
        <wpf:DesignModeResourceDictionary DesignModeSource="pack://application:,,,/MaterialDesignColors;component/Themes/Recommended/Primary/MaterialDesignColor.DeepPurple.xaml" />
        <wpf:DesignModeResourceDictionary DesignModeSource="pack://application:,,,/MaterialDesignColors;component/Themes/Recommended/Accent/MaterialDesignColor.Lime.xaml" />
        <wpf:DesignModeResourceDictionary DesignModeSource="pack://application:,,,/MaterialDesignThemes.MahApps;component/Themes/MaterialDesignTheme.MahApps.Fonts.xaml" />
        <wpf:DesignModeResourceDictionary DesignModeSource="pack://application:,,,/MaterialDesignThemes.MahApps;component/Themes/MaterialDesignTheme.MahApps.Flyout.xaml" />
      </ResourceDictionary.MergedDictionaries>

      <swc:BooleanToVisibilityConverter x:Key="b2vc"/>

      <wpf:BooleanToVisibilityConverter 
        x:Key="ib2vc" 
        True="Hidden" 
        False="Visible" 
        />

      <wpf:BooleanToVisibilityConverter 
        x:Key="nb2vc" 
        True="Visible" 
        False="Hidden" 
        />

      <ContextMenu x:Key="TraceContextMenu">
        <MenuItem Command="{Binding TraceViewModel.ResetAxes}">
          <MenuItem.Icon>
            <md:PackIcon Kind="Refresh"/>
          </MenuItem.Icon>
          <MenuItem.Header>
            <TextBlock Text="Reset Axes" VerticalAlignment="Center"/>
          </MenuItem.Header>
        </MenuItem>
        <Separator/>
        <MenuItem Command="{Binding TraceViewModel.ShowOptions}">
          <MenuItem.Icon>
            <md:PackIcon Kind="Gear"/>
          </MenuItem.Icon>
          <MenuItem.Header>
            <TextBlock Text="Options..." VerticalAlignment="Center"/>
          </MenuItem.Header>
        </MenuItem>
      </ContextMenu>

    </ResourceDictionary>
  </UserControl.Resources>

  <Grid>

    <Grid.ColumnDefinitions>
      <ColumnDefinition/>
      <ColumnDefinition Width="5"/>
      <ColumnDefinition Width="Auto"/>
    </Grid.ColumnDefinitions>

    <Grid Visibility="{Binding IsReady, Converter={StaticResource b2vc}}">

      <Grid.RowDefinitions>
        <RowDefinition />
        <RowDefinition Height="5"/>
        <RowDefinition Height="{Binding TraceViewModel.ViewHeight, Mode=TwoWay, Converter={x:Static wpf:PixelToGridLengthConverter.Default}}"/>
      </Grid.RowDefinitions>

      <oxy:PlotView x:Name="_muStarSigmaPlotView" 
                    Model="{Binding MuStarSigmaViewModel.PlotModel}" 
                    Background="Transparent"
                    />

      <GridSplitter Grid.Row="1" 
                    HorizontalAlignment="Stretch" 
                    Height="5"
                    />

      <oxy:PlotView x:Name="_tracePlotView"
                    Grid.Row="2"
                    Model="{Binding TraceViewModel.PlotModel}" 
                    Background="Transparent"
                    ContextMenu="{StaticResource TraceContextMenu}"
                    />

    </Grid>

    <TextBlock VerticalAlignment="Center" 
               HorizontalAlignment="Center"
               TextAlignment="Center"
               Visibility="{Binding IsReady, Converter={StaticResource ib2vc}}"
               >
      <TextBlock.Inlines>
        <Run Text="No data"/>
        <LineBreak/>
        <LineBreak/>
        <Run Text="(acquire data to continue)"/>
      </TextBlock.Inlines>
    </TextBlock>

    <StackPanel Grid.Column="1" Orientation="Horizontal">
      <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" />
    </StackPanel>

    <StackPanel Grid.Column="2">

      <GroupBox Header="Output" IsEnabled="{Binding IsReady}">

        <ComboBox ItemsSource="{Binding OutputNames}" 
                  SelectedIndex="{Binding SelectedOutputName}"
                  MinWidth="200"
                  Margin="5"
                  IsEnabled="{Binding CanSelectOutputName}"
                  />

      </GroupBox>

      <GroupBox Header="Simulation" 
                Margin="0,20,0,0" 
                Padding="14"
                IsEnabled="{Binding IsReady}"
                >
        <StackPanel Width="160">
          <StackPanel.Resources>
            <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedAccentButton}">
              <Setter Property="Height" Value="32"/>
              <Setter Property="Width" Value="32"/>
              <Setter Property="Padding" Value="0"/>
              <Setter Property="Margin" Value="2 0 2 0"/>
            </Style>
            <Style TargetType="TextBlock">
              <Setter Property="FontSize" Value="14"/>
            </Style>
            <Style TargetType="md:PackIcon">
              <Setter Property="Width" Value="24"/>
              <Setter Property="Height" Value="24"/>
            </Style>
          </StackPanel.Resources>

          <Grid>
            <Grid.ColumnDefinitions>
              <ColumnDefinition/>
              <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="{Binding TraceViewModel.SelectedX, StringFormat=t \= {0:G4}}" Margin="20,0,0,0"/>
            <TextBlock Grid.Column="1" Text="{Binding PlaySpeed, StringFormat=x {0}}" Margin="0,0,20,0" HorizontalAlignment="Right"/>
          </Grid>

          <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button Command="{Binding PlaySimulation}">
              <md:PackIcon Kind="Play"/>
            </Button>
            <Button Command="{Binding StopSimulation}">
              <md:PackIcon Kind="Stop"/>
            </Button>
            <Button Command="{Binding PlaySlower}">
              <md:PackIcon Kind="Rewind"/>
            </Button>
            <Button Command="{Binding PlayFaster}">
              <md:PackIcon Kind="FastForward"/>
            </Button>
          </StackPanel>

        </StackPanel>
      </GroupBox>

      <GroupBox Header="Ranking" Margin="0,10,0,0" IsEnabled="{Binding IsReady}">

        <StackPanel>
          <StackPanel>
            <StackPanel.Style>
              <Style TargetType="StackPanel">
                <Setter Property="Visibility" Value="Collapsed"/>
                <Style.Triggers>
                  <DataTrigger Binding="{Binding RankedParameterViewModels.Count}" Value="0">
                    <Setter Property="Visibility" Value="Visible"/>
                  </DataTrigger>
                </Style.Triggers>
              </Style>
            </StackPanel.Style>

            <StackPanel Orientation="Horizontal" 
                        Margin="0, 30" 
                        HorizontalAlignment="Center"
                        >
              <TextBlock VerticalAlignment="Center" 
                         Text="Not ranked"
                         />
            </StackPanel>

          </StackPanel>

          <StackPanel Margin="0,10,0,0">
            <StackPanel.Style>
              <Style TargetType="StackPanel">
                <Setter Property="Visibility" Value="Visible"/>
                <Style.Triggers>
                  <DataTrigger Binding="{Binding RankedParameterViewModels.Count}" Value="0">
                    <Setter Property="Visibility" Value="Collapsed"/>
                  </DataTrigger>
                </Style.Triggers>
              </Style>
            </StackPanel.Style>

            <ScrollViewer MaxHeight="120"
                          VerticalScrollBarVisibility="Auto" 
                          HorizontalScrollBarVisibility="Hidden"
                          >
              <ItemsControl ItemsSource="{Binding RankedParameterViewModels}">
                <ItemsControl.ItemTemplate>
                  <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                      <md:PackIcon Kind="Tick" 
                                   Foreground="Green"
                                   Height="10"
                                   Width="10"
                                   Margin="2,0"
                                   VerticalAlignment="Center"
                                   Visibility="{Binding IsSelected, Converter={StaticResource nb2vc}}"
                                   />
                      <TextBlock MaxWidth="160" 
                                 TextTrimming="CharacterEllipsis" 
                                 >
                        <TextBlock.Text>
                          <MultiBinding StringFormat="{}{0} ({1:G3})">
                            <Binding Path="Name" />
                            <Binding Path="Score" />
                          </MultiBinding>
                        </TextBlock.Text></TextBlock>
                    </StackPanel>
                  </DataTemplate>
                </ItemsControl.ItemTemplate>
              </ItemsControl>
            </ScrollViewer>

            <TextBlock MaxWidth="200"
                       Margin="0,10,0,0"
                       HorizontalAlignment="Left"
                       FontSize="7"
                       TextTrimming="CharacterEllipsis">
              <TextBlock.Inlines>
                <Run Text="Ranked over"/>
                <Run Text="{Binding RankedFrom, Mode=OneWay, StringFormat={}{0:G3}}"/>
                <Run Text="to"/>
                <Run Text="{Binding RankedTo, Mode=OneWay, StringFormat={}{0:G3}}"/>
                <Run Text="{Binding XUnits, Mode=OneWay}"/>
              </TextBlock.Inlines>
            </TextBlock>

            <StackPanel Margin="0,10,0,0" 
                        Orientation="Horizontal"
                        >
              <TextBlock FontSize="7" 
                         HorizontalAlignment="Left"
                         Text="Ranked using "
                         />
              <TextBlock FontSize="7"
                         HorizontalAlignment="Left"
                         MaxWidth="160" 
                         TextWrapping="Wrap"
                         TextTrimming="CharacterEllipsis"
                         Tag=", "
                         wpf:Content.TextBlockRuns="{Binding RankedUsing}"
                         />
            </StackPanel>

            <Grid Margin="0,10,0,0">
              <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
              </Grid.ColumnDefinitions>

              <Button Grid.Column="1"
                      Margin="0,0,5,0" 
                      Content="Use"
                      ToolTip="Use selected parameters in new design"
                      Command="{Binding UseRankedParameters}"
                      />
              <Button Grid.Column="2"
                      Margin="5,0,0,0" 
                      Content="Share"
                      ToolTip="Upload selected parameters into shared state"
                      Command="{Binding ShareRankedParameters}"
                      />
            </Grid>

          </StackPanel>

        </StackPanel>
      </GroupBox>

    </StackPanel>

  </Grid>
</UserControl>

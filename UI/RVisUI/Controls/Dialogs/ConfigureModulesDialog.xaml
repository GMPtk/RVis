                      Height="500" Width="700"
                      GlowBrush="{DynamicResource AccentColorBrush}"
                      NonActiveGlowBrush="Red"
                      ResizeMode="CanResizeWithGrip"
                      WindowTransitionsEnabled="False"
                      Icon="../../Resources/app.ico" 
                      WindowStartupLocation="CenterOwner"

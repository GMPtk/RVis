                    </Binding.ValidationRules>
                  </Binding>
                </TextBox.Text>
              </TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
              <CheckBox IsChecked="{Binding IsFu_kidPreset}"/>
